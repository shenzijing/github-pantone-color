<%- include('layout', { body: `
<div>
    <h1 class="text-3xl font-bold mb-4"><%= t('pantoneColorsChart') %></h1>
    <div class="mb-6">
        <p class="mb-3"><%= t('pantoneDescription') %> <%= t('pantoneDescription2') %></p>
        <div class="bg-yellow-100 border-l-4 border-yellow-500 text-yellow-700 p-3" role="alert">
            <p><%= t('disclaimerText') %></p>
        </div>
    </div>
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6 2xl:grid-cols-8 gap-3">
        <% pantoneColors.forEach(color => { %>
            <div class="bg-white rounded-lg shadow-md overflow-hidden">
                <div class="h-20" style="background-color: <%= color.hex %>"></div>
                <div class="p-2">
                    <h3 class="font-semibold text-sm"><%= color.name %></h3>
                    <p class="text-xs text-gray-600"><%= color.hex %></p>
                    <p class="text-xs text-gray-600">RGB: <%= color.rgb.join(', ') %></p>
                    <p class="text-xs text-gray-600">CMYK: <%= color.cmyk.join(', ') %></p>
                </div>
            </div>
        <% }) %>
    </div>
    <div class="mt-6 flex justify-center">
        <% if (currentPage > 1) { %>
            <a href="/page/<%= currentPage - 1 %>" class="px-3 py-1 bg-blue-500 text-white rounded-md mr-2"><%= t('previous') %></a>
        <% } %>
        <span class="px-3 py-1"><%= t('page') %> <%= currentPage %> <%= t('of') %> <%= totalPages %></span>
        <% if (currentPage < totalPages) { %>
            <a href="/page/<%= currentPage + 1 %>" class="px-3 py-1 bg-blue-500 text-white rounded-md ml-2"><%= t('next') %></a>
        <% } %>
    </div>
    <div class="mt-12 space-y-8">
        <section>
            <h2 class="text-2xl font-bold mb-4"><%= t('whatIsPantone') %></h2>
            <p class="mb-4"><%= t('pantoneDescription1') %></p>
        </section>
        <section>
            <h2 class="text-2xl font-bold mb-4"><%= t('howToUsePantoneColors') %></h2>
            <p class="mb-4"><%= t('pantoneUsageDescription') %></p>
        </section>
        <section>
            <h2 class="text-2xl font-bold mb-4"><%= t('pantoneColorOfTheYear') %></h2>
            <p class="mb-4"><%= t('colorOfTheYearDescription') %></p>
        </section>
        <section>
            <h2 class="text-2xl font-bold mb-4"><%= t('pantoneVsOthers') %></h2>
            <p class="mb-4"><%= t('colorSystemsComparison') %></p>
        </section>
        <section>
            <h2 class="text-2xl font-bold mb-4"><%= t('faqs') %></h2>
            <div class="space-y-4">
                <div>
                    <h3 class="font-semibold"><%= t('faq1Title') %></h3>
                    <p><%= t('faq1') %></p>
                </div>
                <div>
                    <h3 class="font-semibold"><%= t('faq2Title') %></h3>
                    <p><%= t('faq2') %></p>
                </div>
                <div>
                    <h3 class="font-semibold"><%= t('faq3Title') %></h3>
                    <p><%= t('faq3') %></p>
                </div>
                <div>
                    <h3 class="font-semibold"><%= t('faq4Title') %></h3>
                    <p><%= t('faq4') %></p>
                </div>
                <div>
                    <h3 class="font-semibold"><%= t('faq5Title') %></h3>
                    <p><%= t('faq5') %></p>
                </div>
            </div>
        </section>
    </div>
</div>
` }) %>